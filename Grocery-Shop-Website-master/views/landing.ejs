<section id="comments">
    <div class="comment-container">
        <div class="head-info">
            <h2>Reviews</h2>
        </div>
        <a class="add btn btn-lg btn-light" href="/comments/new">Add Review</a>
        <div class="row">
            <% comments.forEach(function(comment){ %>
                <div class="col-xl-4 col-lg-6 col-12">
                    <div class="content">
                        <div class="row">
                            <div class="col-2">
                                <img src="../images/Avatar/male_avatar.png" alt="Icon">
                            </div>
                            <div class="col-7">
                                <h5 class="text"><%=comment.text%></h5>
                                <div class="text">
                                    <% for(var i=0; i< comment.starValue; i++){ %>
                                        <i class="fa fa-star check"></i>
                                    <% } %>
                                    <% for(var i=0; i< 5-comment.starValue; i++){ %>
                                        <i class="fa fa-star"></i>
                                    <% } %>
                                    <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                        <a class="update btn btn-sm btn-outline-success" href="/edit-comments/<%= comment._id %>">Update</a>
                                        <form action="/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                            <button class="delete btn btn-sm btn-outline-danger">Delete</button>
                                        </form>
                                    <% } %>
                                </div>
                            </div>
                            <div class="col-3">
                                <blockquote>
                                    - <%=comment.author.username%>
                                </blockquote>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>  
        </div>
    </div>
</section>

